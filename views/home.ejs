<body>

    <div class="nav-container" id="nav">
        <style>
            .navbar {
                text-decoration: none;
                display: flex;
                flex-direction: row;
                flex-wrap: nowrap;
                flex-grow: 1;
            }
        </style>
        <!-- As a heading -->
        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <span class="navbar-brand mb-0 h1"><a href="/">Task Title</a></span>
            </div>
            <div class="container-fluid">
                <span class="navbar-brand mb-0 h1"><a href="/create">Create</a></span>
            </div>

